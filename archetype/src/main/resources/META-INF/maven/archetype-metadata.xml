<archetype-descriptor xmlns="http://maven.apache.org/plugins/maven-archetype-plugin/archetype-descriptor/1.0.0"
                      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                      xsi:schemaLocation="http://maven.apache.org/plugins/maven-archetype-plugin/archetype-descriptor/1.0.0 http://maven.apache.org/xsd/archetype-descriptor-1.0.0.xsd"
                      name="Closure-Package Archetype">
    <requiredProperties>
        <requiredProperty key="archetypeVersion">
        </requiredProperty>
    </requiredProperties>
    <fileSets>
        <fileSet>
            <directory>src/main/python</directory>
            <includes>
                <include>**/*.py</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>src/main/webapp</directory>
            <includes>
                <include>**</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>src/main/webapp/img</directory>
            <includes>
                <include>**</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>src/main/webapp/META-INF</directory>
            <includes>
                <include>**</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>src/main/resources</directory>
            <includes>
                <include>jquery-1.4.4.min.js</include>
            </includes>
        </fileSet>
        <fileSet packaged="true">
            <directory>src/main/resources</directory>
            <includes>
                <include>css/**</include>
                <include>externs/**</include>
                <include>img/**</include>
                <include>javascript/**</include>
            </includes>
        </fileSet>
    </fileSets>
</archetype-descriptor>